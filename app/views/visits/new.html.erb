<h1>Příchod na stanoviště</h1>
<table class="form">
<%= form_for @visit, url: {action: 'create'} do |form| %>
  <%= fields_for :puzzle, @visit.puzzle do |puzzle_fields| %>
    <tr>
      <td>Kód stanoviště:</td>
      <td><%= puzzle_fields.text_field :code %></td>
    </tr>
  <% end %>
  <tr>
    <td><%= form.submit 'Odeslat' %></td>
  </tr>
<% end %>
</table>

<!DOCTYPE html>
<html>
  <head>
    <title>iKoleƒçko</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="outer">
      <div class="logo">
        <%= link_to image_tag('logo.png'), root_path %>
      </div>
      <div class="main">
        <div class="menu">
          <ul>
            <% if team_signed_in? %>
              <li><%= link_to t(:new_answer), new_answer_path %></li>
              <li><%= link_to t(:my_answers), answers_path %></li>
              <li><%= link_to t(:log_out), destroy_team_session_path, method: :delete %></li>
            <% else %>
              <li><%= link_to t(:log_in), new_team_session_path %></li>
              <li><%= link_to t(:sign_up), new_team_registration_path %></li>
            <% end %>
            <li><%= link_to t(:rules), rules_path %></li>
            <li><%= link_to t(:teams), teams_path %></li>
            <li><%= link_to t(:puzzles_and_solutions), puzzles_path %></li>
            <li><%= link_to t(:results), results_path %></li>
          </ul>
        </div>
        <div class="content">
          <% if flash[:success] %>
            <p class="success"><%= flash[:success] %></p>
          <% end %>
          <% if flash[:notice] %>
            <p class="notice"><%= flash[:notice] %></p>
          <% end %>
          <% if flash[:alert] %>
            <p class="alert"><%= flash[:alert] %></p>
          <% end %>
          <%= yield %>
        </div>
      </div>
    </div>
  </body>
</html>

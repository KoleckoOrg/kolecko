<h1>Příchod na stanoviště</h1>

<%= form_for @visit, url: {action: 'create'} do |form| %>
  <%= fields_for :puzzle, @visit.puzzle do |puzzle_fields| %>
    <div class="field">
      <%= puzzle_fields.label :code, 'Kód stanoviště' %><br>
      <%= puzzle_fields.text_field :code %>
    </div>
  <% end %>

  <div class="actions">
    <%= form.submit 'Odeslat' %>
  </div>
<% end %>
